{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur
{% endblock %}

{% block body %}
	<h1>Détails de l'utilisateur</h1>

	<div class="d-flex gap-1">
		<a href="{{ path('app_user_index') }}">
			<button class="btn btn-sm btn-light mb-3">
				<i class="fas fa-arrow-left text-primary"></i>
			</button>
		</a>
	</div>

	<div class="card p-3">
		<div class="card-header">
			<div class="d-flex">
				<div class="card_header_left">
					<img class="rounded-pill" width="110" height="110" src="{{ asset('images/user-default-avatar.png') }}" alt="">
					{% if user.roles[0] == "ROLE_ADMIN" %}
						<div class="role_label bg-warning text-white text-center">
							ADMIN
						</div>
					{% elseif user.roles[0] == "ROLE_USER" %}
						<div class="role_label bg-info text-white text-center">
							MEMBRE
						</div>
					{% endif %}
					{# <div>Créé le {{ user.createdAt ? user.createdAt|date('d/m/Y') : '' }}</div> #}
				</div>
				<div class="card_header_right d-flex flex-column justify-content-center">
					<div>{{ user.firstname }}</div>
					<div>{{ user.lastname }}</div>
					<div>ID N°{{ user.id }}</div>
					<div>
						<i class="fas fa-phone-square"></i>&nbsp;0708091011
					</div>
				</div>
				{# <div class="card_user_verified">
